extends ../layout

block content
	h1.
		Product ID #{product._id}
	form(action='/products/#{product._id}/edit',method='post',name='updateproduct',enctype='application/x-www-form-urlencoded')
		p Name:
			input#inputName(type='text', value='#{product.name}', name='name')
		p Description:
			input#inputDescription(type='text', value='#{product.description}', name='description')

			input(type='hidden',value='PUT',name='_method')
		p
			button#btnSubmit(type='submit').
				Update